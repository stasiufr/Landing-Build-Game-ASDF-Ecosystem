# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration (PostgreSQL)
# For Docker: use POSTGRES_PASSWORD below
# For local: replace with your actual credentials
POSTGRES_PASSWORD=your-secure-password-here
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@localhost:5432/asdf_games
# For production: provide the CA certificate content for SSL verification
# DATABASE_SSL_CA=-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----

# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
ASDF_TOKEN_MINT=YOUR_TOKEN_MINT_ADDRESS_HERE
MIN_HOLDER_BALANCE=1000000
TREASURY_WALLET=YOUR_TREASURY_WALLET_ADDRESS
ESCROW_WALLET=YOUR_ESCROW_WALLET_ADDRESS
# WARNING: Store this securely! Consider using a secrets manager in production
# ESCROW_PRIVATE_KEY=YOUR_ESCROW_PRIVATE_KEY_BASE58

# Security (REQUIRED IN PRODUCTION - app will crash without these!)
# Generate secure values: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_VALUE
API_KEY_SALT=CHANGE_THIS_TO_A_SECURE_RANDOM_VALUE
# Comma-separated list of admin wallet addresses for admin endpoints
ADMIN_WALLETS=WALLET_ADDRESS_1,WALLET_ADDRESS_2

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
# Set to 'true' to allow requests without Origin header (not recommended in production)
# ALLOW_NO_ORIGIN=false

# Proxy Configuration
# Number of trusted proxies, or specific IPs: 'loopback, 123.123.123.123'
# TRUST_PROXY=1

# Game Configuration
CYCLE_WEEKS=9
ROTATION_EPOCH=2024-01-01T00:00:00Z
